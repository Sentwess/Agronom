<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Spinner" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#456c79</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:hint">Состояние</item>
    </style>

    <style name="ToolbarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">22sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">Поиск</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@color/focused</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/mText</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToggleButtonGroupStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_toggle_bg</item>
    </style>

</resources>